CONTROL_START
  
  PIN_INPUT(TASTER)
  PIN_PULLUP(TASTER)
  PIN_OUTPUT(LED)

  ACTION(nice_action)
      TIMER_START(new)
      PIN_SET(LED);
      TIMER_WAIT(new, 5)
      PIN_CLEAR(LED);
  ACTION_END(nice_action)

  ON CLOCK_MIN == 1 DO ACTION_RESTART(nice_action) END
  ON PIN_FALLING(TASTER) DO ACTION_RESTART(nice_action) END

CONTROL_END

